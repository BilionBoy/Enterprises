<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="auth-card">
        <div class="auth-logo text-center mb-4">
          <svg width="120" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12Z" stroke="#2563eb" stroke-width="2"/>
            <path d="M16 12C16 14.2091 14.2091 16 12 16C9.79086 16 8 14.2091 8 12C8 9.79086 9.79086 8 12 8C14.2091 8 16 9.79086 16 12Z" fill="#2563eb"/>
          </svg>
        </div>
        <% if flash[:alert] || flash[:notice] %>
          <div class="alert <%= flash[:alert] ? 'alert-danger' : 'alert-success' %>">
            <%= flash[:alert] || flash[:notice] %>
          </div>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1 class="auth-title text-center">Login</h1>
          <p class="auth-subtitle text-center">Entre com seu email e senha</p>
          <div class="mb-4">
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email", input_html: { class: "form-control", autocomplete: "email" } %>
          </div>
          <div class="mb-4">
            <%= f.input :password, required: true, placeholder: "Senha", input_html: { class: "form-control", autocomplete: "current-password" } %>
          </div>
          <div class="mb-4">
            <div class="form-check">
              <%= f.input :remember_me, as: :boolean, label: "Lembrar-me", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
            </div>
          </div>
          <%= f.button :submit, "Entrar", class: "btn btn-primary w-100" %>
        <% end %>
        <!-- Links para registro ou recuperaÃ§Ã£o de senha -->
        <div class="links mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
