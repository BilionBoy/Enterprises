<!-- Register View -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
      <div class="auth-card">
        <div class="auth-logo">
          <svg width="120" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12Z" stroke="#2563eb" stroke-width="2"/>
            <path d="M16 12C16 14.2091 14.2091 16 12 16C9.79086 16 8 14.2091 8 12C8 9.79086 9.79086 8 12 8C14.2091 8 16 9.79086 16 12Z" fill="#2563eb"/>
          </svg>
        </div>
        <h1 class="auth-title">Registrar</h1>
        <p class="auth-subtitle">Preencha as informações abaixo para criar sua conta</p>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-md-6 mb-4">
              <%= f.input :nome, autofocus: true, autocomplete: "name", placeholder: "Nome", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-6 mb-4">
              <%= f.input :email, placeholder: "Email", input_html: { class: "form-control" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mb-4">
              <%= f.input :cpf, placeholder: "CPF (somente números)", input_html: { class: "form-control", maxlength: 11 } %>
            </div>
            <div class="col-md-6 mb-4">
              <%= f.input :telefone, placeholder: "Telefone", input_html: { class: "form-control" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mb-4">
              <%= f.input :funcao_id, as: :select, collection: Funcao.all.collect { |f| [f.nome, f.id] }, prompt: "Selecione uma função", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-6 mb-4">
              <%= f.input :password, placeholder: "Senha", input_html: { class: "form-control" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mb-4">
              <%= f.input :password_confirmation, placeholder: "Confirmar senha", input_html: { class: "form-control" } %>
            </div>
          </div>
          <%= f.button :submit, "Registrar", class: "btn btn-primary w-100" %>
          <div class="links mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
