<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Estabelecimento</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @estabelecimento %>">
          <p>
            <strong>Nome:</strong>
            <%= @estabelecimento.nome %>
          </p>
          <p>
            <strong>Cnpj:</strong>
            <%= @estabelecimento.cnpj %>
          </p>
          <p>
            <strong>Endereco:</strong>
            <%= @estabelecimento.endereco %>
          </p>
          <p>
            <strong>Telefone:</strong>
            <%= @estabelecimento.telefone %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_estabelecimento_path(@estabelecimento), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", estabelecimentos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @estabelecimento, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
