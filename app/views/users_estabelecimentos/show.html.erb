<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar User Estabelecimento</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @user_estabelecimento %>">
          <p>
            <strong>User:</strong>
            <%= @user_estabelecimento.user %>
          </p>
          <p>
            <strong>Estabelecimento:</strong>
            <%= @user_estabelecimento.estabelecimento %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_user_estabelecimento_path(@user_estabelecimento), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", users_estabelecimentos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @user_estabelecimento, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
