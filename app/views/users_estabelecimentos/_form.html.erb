<%= render "shared/context_nav", title: t("activerecord.models.#{UserEstabelecimento.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{UserEstabelecimento.model_name.i18n_key}.other"), users_estabelecimentos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@user_estabelecimento) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @user_estabelecimento.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{UserEstabelecimento.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.input :user_id, as: :select, collection: User.pluck(:nome, :id), include_blank: "Selecione um usuÃ¡rio", input_html: { class: "form-control capitalize" } %>
        </div>
        <div class="col-12">
          <%= f.input :estabelecimento_id, as: :select, collection: Estabelecimento.pluck(:nome, :id), include_blank: "Selecione um estabelecimento", input_html: { class: "form-control capitalize" } %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", users_estabelecimentos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>